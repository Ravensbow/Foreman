@inject HttpClient http
<div>
    Siema to sa Texty:
    @foreach(var t in DisplayedTexts)
    {
        <p>@t</p>
    }
</div>
@code{
    List<TestController.DisplayedText> DisplayedTexts = new List<TestController.DisplayedText>();
    protected override async Task OnInitializedAsync()
    {
        DisplayedTexts = await http.GetFromJsonAsync<List<TestController.DisplayedText>>("test/all") ?? new List<TestController.DisplayedText>();
    }
}